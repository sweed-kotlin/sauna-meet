<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="selectInfusionOilsViewModel"
            type="com.sweed.saunameet.session.SelectInfusionOilsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraitLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".session.SelectInfusionOilsFragment">

        <TextView
            android:id="@+id/selectInfusionOilsHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/infusion_selection_header_string"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/continueToInfusionButton"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginBottom="@dimen/next_button_lower_margin"
            android:backgroundTint="@color/logo_middel_gray"
            android:text="@string/next_string"
            android:textSize="20sp"
            app:icon="@drawable/sauna_24"
            app:iconGravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>