<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="selectOilsVM"
            type="com.sweed.saunameet.session.SelectInfusionOilsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:id="@+id/ConstraitLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".session.SelectInfusionOilsFragment">

        <TextView
            android:id="@+id/selectInfusionOilsHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/infusion_selection_header_string"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- TODO
        android:onClick="@{() -> selectOilsVM.onStartEvent()}"-->

        <Button
            android:id="@+id/startInfusionsButton"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginBottom="@dimen/next_button_lower_margin"
            android:backgroundTint="@color/green_background_color"
            android:text="@string/start_string"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:icon="@drawable/sauna_24"
            app:iconGravity="end"
            app:iconTint="@color/green_highlight_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>